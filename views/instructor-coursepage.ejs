<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Dersler</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/instructor-coursepage.css">
</head>

<body class="d-flex flex-column vh-100">
    <%- include('partials/navbar')%>
    <div class="container-main">

        <div class="row">
            <div class="col">
                <div class="wrapper-wrapper-student">
                    <div class="wrapper-header">Students</div>
                    <div class="wrapper-student">
                        <div class="card_item">
                            <h4 style="text-align: left"> 
                                <ul>
                                    <% for(var i=0; i < names.length; i++) { %>
                                    <li><a href="/instructor-main/<%=lecture_id%>/student-contents/<%=student_ids[i]%>/<%=ids[i]%>" class="link"><%=names[i]%>-<%=student_ids[i]%></a></li>
                                    <% } %>
                              </ul> 
                            </h4>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col text-white">
                <div class="row">
                    <div class="wrapper-wrapper-quizexam">
                        <div class="wrapper-header">Exams</div>
                        <div class="wrapper-quizexam">
                            <div class="card_item">
                                <h4 style="text-align: left"> 
                                    <ul>
                                        <% for(var i=0; i < exam_names.length; i++) { %>
                                            <li><a href="/instructor-main/exam/ans/<%=exam_ids[i]%>/1" class="link"><%=exam_names[i]%></a></li>
                                        <% } %>
                                  </ul> 
                                </h4>
                            </div>
                        </div>
                        <div class="wrapper-footer">
                            <button type="button" class="btn btn-success" id="addExamBtn" data-bs-toggle="modal"
                                data-bs-target="#addExam">
                               Add Exam
                            </button>

                             <!-- Modal -->
                            <div class="modal fade" id="addExam" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel" style="color: black;">Add Exam</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <form>
                                            <div class="mb-3">
                                                <label for="exam-name" class="col-form-label" style="color: black;">Name</label>
                                                <input type="text" class="form-control" id="exam-name">
                                            </div>
                                            <div class="mb-3">
                                                <label for="exam-start" class="col-form-label" style="color: black;">Start Time</label>
                                                <input type="text" class="form-control" id="exam-start" placeholder="March 27, 2022 19:00:00">
                                            </div>
                                            <div class="mb-3">
                                                <label for="exam-end" class="col-form-label" style="color: black;">End Time</label>
                                                <input type="text" class="form-control" id="exam-end" placeholder="March 27, 2022 20:00:00">
                                            </div>
                                        </form>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <button type="button" class="btn btn-success" data-bs-dismiss="modal" id="saveExam">Save</button>
                                    </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="wrapper-wrapper-quizexam">
                        <div class="wrapper-header">Quiz</div>
                        <div class="wrapper-quizexam">
                            <div class="card_item">
                                <h4 style="text-align: left"> 
                                    <ul>

                                  </ul> 
                                </h4>
                            </div>
                        </div>
                        <div class="wrapper-footer">
                            <button type="button" class="addbtn btn btn-success" data-toggle="modal" data-target="#exampleModal">
                                Add Quiz
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col text-white">
                <div class="wrapper-wrapper-assignment">
                    <div class="wrapper-header">Assigments</div>
                    <div class="wrapper-assignment">
                        <div class="card_item">
                            <h4 style="text-align: left"> 
                                <ul>

                              </ul> 
                            </h4>
                        </div>
                    </div>
                    <div class="wrapper-footer">
                        <button type="button" class="addbtn btn btn-success" data-toggle="modal" data-target="#exampleModal">
                            Add Assignment
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('partials/footer')%>
            <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
                integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
                crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
                integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
                crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
                integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
                crossorigin="anonymous"></script>

            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
            integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
            crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
            integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
            crossorigin="anonymous"></script>

            <script src="/js/instructor-coursepage.js"></script>

            <script>
                const addExamBtn = document.getElementById('saveExam');
                const examName = document.getElementById('exam-name');
                const examStart = document.getElementById('exam-start');
                const examEnd = document.getElementById('exam-end');           
                addExamBtn.addEventListener('click', () =>{
                    addExam(examName.value, examStart.value, examEnd.value, '<%=lecture_id%>');
                    
                })

            </script>
            
</body>

</html>